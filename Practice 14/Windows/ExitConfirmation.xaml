<Window x:Class="Practice_14.ExitConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_14"
        mc:Ignorable="d"
        Title="Подтверждение выхода" Height="130" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Practice 14;component/Resources/exit.ico" >
    <Grid>
        <StackPanel>
            <Label Content="Вы действительно хотите выйти?" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Content="Выйти" Width="100" Height="20" Click="ConfirmExit_Click"/>
            <Border BorderThickness="20"/>
            <Button Content="Отмена" Width="100" Height="20" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
